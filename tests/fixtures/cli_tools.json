{
  "manual_version": "1.0.0",
  "utcp_version": "1.0.1",
  "info": {
    "title": "CLI Tools",
    "version": "1.0.0",
    "description": "Command-line tools for system interaction"
  },
  "variables": {},
  "tools": [
    {
      "name": "list_files",
      "description": "List files in the current directory",
      "inputs": {
        "type": "object",
        "properties": {}
      },
      "outputs": {
        "type": "string"
      },
      "tags": ["filesystem", "cli"],
      "tool_call_template": {
        "call_template_type": "cli",
        "commands": ["ls -la"],
        "append_to_final_output": false
      }
    },
    {
      "name": "echo_message",
      "description": "Echo a message",
      "inputs": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Message to echo"
          }
        },
        "required": ["message"]
      },
      "outputs": {
        "type": "string"
      },
      "tags": ["test", "cli"],
      "tool_call_template": {
        "call_template_type": "cli",
        "commands": ["echo {message}"],
        "append_to_final_output": false
      }
    },
    {
      "name": "get_date_and_uptime",
      "description": "Get current date and system uptime",
      "inputs": {
        "type": "object",
        "properties": {}
      },
      "outputs": {
        "type": "string"
      },
      "tags": ["system", "cli"],
      "tool_call_template": {
        "call_template_type": "cli",
        "commands": ["date", "uptime"],
        "append_to_final_output": true
      }
    }
  ]
}
